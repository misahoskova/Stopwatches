<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Stopky</title>
  <!-- Bulma CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
  <section class="section">
    <div class="container">
      <h1 class="title">Stopky</h1>

      <!-- Zobrazení času -->
      <div class="box has-text-centered">
        <h2 id="timer" class="subtitle"><%= typeof formattedElapsed !== 'undefined' ? formattedElapsed : '00:00:00' %></h2>
      </div>

      <!-- Tlačítka Start/Restart a Pause jako formuláře -->
      <div class="buttons is-centered">
        <form action="/api/stopwatch/start" method="post" style="display:inline">
          <button class="button is-primary" type="submit">Start/Restart</button>
        </form>
        <form action="/api/stopwatch/stop" method="post" style="display:inline">
          <button class="button is-warning" type="submit" <%= !formattedStartTime ? 'disabled' : '' %>>Pause</button>
        </form>
      </div>

      <!-- Formulář Save obsahující Description, Start, End, Duration -->
      <form action="/api/stopwatch/save" method="post">
        <div class="field">
          <label class="label">Description</label>
          <div class="control">
            <input name="description" class="input" type="text" value="<%= description %>" required>
          </div>
        </div>

        <div class="columns">
          <div class="column">
            <div class="field">
              <label class="label">Start</label>
              <div class="control">
                <input name="start" class="input" type="text" readonly value="<%= formattedStartTime %>">
              </div>
            </div>
          </div>
          <div class="column">
            <div class="field">
              <label class="label">End</label>
              <div class="control">
                <input name="end" class="input" type="text" readonly value="<%= formattedEndTime %>">
              </div>
            </div>
          </div>
        </div>

        <div class="field">
          <label class="label">Duration</label>
          <div class="control">
            <input name="duration" class="input" type="text" readonly value="<%= formattedDuration %>">
          </div>
        </div>

        <div class="buttons is-centered">
          <button class="button is-success" type="submit" <%= !formattedDuration ? 'disabled' : '' %>>Save</button>
        </div>
      </form>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const timerEl = document.getElementById('timer');
      setInterval(async () => {
        const res = await fetch('/api/stopwatch/elapsed');
        const { formattedElapsed } = await res.json();
        timerEl.textContent = formattedElapsed;
      }, 1000);
    });
  </script>
</body>
</html>